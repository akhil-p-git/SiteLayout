# MVP+ Site Layouts - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Application
# =============================================================================
NODE_ENV=development
PORT=3001

# =============================================================================
# Database (PostgreSQL + PostGIS)
# =============================================================================
DATABASE_URL=postgresql://sitelayouts:sitelayouts_dev@localhost:5432/sitelayouts

# =============================================================================
# Redis (Cache & Job Queue)
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# Object Storage (S3 / MinIO)
# =============================================================================
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin123
S3_BUCKET=site-layouts
S3_REGION=us-east-1

# =============================================================================
# Authentication (Auth0 / Okta)
# =============================================================================
AUTH_ISSUER_URL=https://your-tenant.auth0.com/
AUTH_AUDIENCE=https://api.sitelayouts.example.com
AUTH_CLIENT_ID=your_client_id
AUTH_CLIENT_SECRET=your_client_secret

# =============================================================================
# External APIs
# =============================================================================
# Mapbox (for map tiles)
MAPBOX_ACCESS_TOKEN=your_mapbox_token

# USFWS (Endangered Species API)
USFWS_API_KEY=your_usfws_key

# =============================================================================
# Monitoring & Logging
# =============================================================================
LOG_LEVEL=debug
SENTRY_DSN=

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_ESG_MODULE=true
ENABLE_PORTFOLIO_ANALYTICS=true
