# Server Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
DATABASE_URL="postgresql://sitelayouts:sitelayouts_dev@localhost:5433/sitelayouts?schema=public"

# Redis Configuration (for sessions and caching)
REDIS_URL="redis://localhost:6380"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
ACCESS_TOKEN_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d

# Auth0 Configuration (Optional - for OAuth login)
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_CLIENT_ID=your-client-id
AUTH0_CLIENT_SECRET=your-client-secret
AUTH0_AUDIENCE=https://api.sitelayouts.io
# OAuth callback URL (required for production behind reverse proxy like AWS ALB/API Gateway)
# If not set, will be constructed from request protocol/host
OAUTH_CALLBACK_URL=https://api.example.com/api/auth/oauth/callback

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:5173

# MinIO/S3 Configuration
MINIO_ENDPOINT=localhost
MINIO_PORT=9002
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=site-layouts

# Logging
LOG_LEVEL=debug
